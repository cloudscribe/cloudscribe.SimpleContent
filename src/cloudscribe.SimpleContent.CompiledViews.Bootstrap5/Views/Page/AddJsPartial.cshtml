@model cloudscribe.SimpleContent.Web.ViewModels.AddPageResourceViewModel
@inject IPageRoutes pageRoutes
@inject IStringLocalizer<SimpleContent> sr
<form asp-controller="Page" asp-action="AddResource" class="form-inline" role="form">
    <input type="hidden" name="Type" value="js" />
    <input type="hidden" asp-for="Slug" />
        <div class="mb-3">
            <label asp-for="Environment">@sr["Environment"]</label>
                <select asp-for="Environment" name="Environment" class="form-control ms-1 me-1">
                    <option value="any">@sr["Any"]</option>
                    <option value="dev">@sr["Development"]</option>
                    <option value="prod">@sr["Production"]</option>
                </select>
        </div>
        <div class="mb-3">
            <label asp-for="Sort">@sr["Sort"]</label>
            <input asp-for="Sort" name="Sort" class="form-control ms-1 me-1" style="max-width:50px;" />
            <span asp-validation-for="Sort" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Url">@sr["Url"]</label>
            <input asp-for="Url" name="Url" class="form-control ms-1 me-1" style="min-width:350px;" />
            <span asp-validation-for="Url" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">@sr["Add Javascript Url"]</button>  
</form>
